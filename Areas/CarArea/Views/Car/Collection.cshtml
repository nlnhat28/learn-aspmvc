@model string
@{
    ViewData["Title"] = "Collection";
    Layout = "_Layout";
    var brand = (string.IsNullOrWhiteSpace(Model)) ? "Car" : Model;
}
@functions{
    public string GenLink(string brand)
    {
        brand = brand.Replace(" ", "+");
        return $"https://www.google.com/search?q={brand}&sxsrf=APwXEdc0Omk3dErsTnmW7Vh3zJuTzGwl3w:1685784812941&source=lnms&tbm=isch&sa=X&ved=2ahUKEwiJtcXn5ab_AhUQAYgKHZVEA8QQ_AUoAXoECAEQAw&biw=1501&bih=738&dpr=1.25";
    }
}

<div class="text-center">
    @if (string.IsNullOrWhiteSpace(Model))
    {
        <h1 class="display-4">Collection</h1>
        <p>See all cars in <a href="@GenLink("Super Car")" target="_blank" style="text-decoration: none;">my collection</a> now</p>
    }
    else
    {
        <h1 class="display-4">@Model collection</h1>
        <p>See <a href="@GenLink(@Model)" target="_blank" style="text-decoration: none;">@Model collection</a> now</p>
    }

    <p class="text-secondary">@this.Path</p>
</div>
